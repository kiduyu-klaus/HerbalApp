<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book An Appointment"
            android:id="@+id/Booking_head_title"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:background="@drawable/rounded_area"
            android:textAlignment="center"
            android:padding="5dp"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_app_name"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:hint="Consultant Name"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_user_owner"
                android:layout_width="match_parent"
                android:textColorHint="@android:color/black"
                android:layout_height="wrap_content"
                android:hint="User Name"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColorHint="@android:color/black"
                android:id="@+id/edt_app_description"
                android:layout_height="wrap_content"
                android:hint="A Small Description"
                />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/edt_booking_date"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="date"
                android:hint="Date *"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/edt_book_consu_phone"
                android:layout_height="wrap_content"
                android:hint="Consultant Phone*" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/edt_book_user_phone"
                android:layout_height="wrap_content"
                android:hint="User Phone number*" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Appointment"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:id="@+id/edt_btn_save"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_area"/>







    </LinearLayout>






</ScrollView>